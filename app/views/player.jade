.row.player-wrapper
  .col-xs-2.player-play-or-stop-wrapper
    span.glyphicon.player-play-or-stop(ng-click='playOrPause()' ng-class='{"glyphicon-play": !cur_playing.is_playing, "glyphicon-pause": cur_playing.is_playing}')

  .col-xs-10.player-body
    .row.player-track-name
      .col-xs-10 {{cur_playing | trackName:33 :true}}
      .col-xs-2.player-track-duration
        | {{cur_playing.duration - cur_time | duration}}
    .row.player-slider
      input(ng-model='position.cur' type='range' min=0 max='{{::position.max}}')
