.friends-list
  .row(ng-if='friends.length > getPerPage()')
    .friends-search-box
      .col-xs-12.search-wrapper
        input.form-control(placeholder='поиск..' ng-model='search.name' ng-change='getFriendsByName(search.name)')

        .loading-bar-spinner(ng-if='is_loading')
          .spinner-icon

  .row.friend-item(ng-repeat='friend in rendered_friends track by $index' ng-click='showUserTracks(friend.id)')
    img.img-circle.friend-photo(src='{{friend.photo_50}}')
    a.friend-name {{friend.first_name | limitTo:10}}

  // big thanks to http://stackoverflow.com/a/22570031/1171144
  .row(ng-if='(friends.length > getPerPage() && !search.name.length)')
    .col-xs-12
      a.btn.btn-default.show-more(ng-click='showPart("next")') Еще
