.toggle.slide2
  input#d(type='checkbox' ng-model='stat.is_all_tracks')
  label(for='d')
    .card

.info
  div
    .row всего
    .row: b
      {{stat[ stat.is_all_tracks ? 'all_count' : 'without_lyrics_count' ].all}}

  div
    .row улучшено
    .row: b
      {{stat[ stat.is_all_tracks ? 'all_count' : 'without_lyrics_count' ].improved}}

  div
    .row зафейлено
    .row: b
      {{stat[ stat.is_all_tracks ? 'all_count' : 'without_lyrics_count' ].failed}}

.improve-button
  button.ladda-button(post-render='ladda-init' ng-click='improveList()' data-style='expand-right' data-color='aimpr' data-size='s' data-spinner-color='AliceBlue')
    span.ladda-label Улучшить

span.glyphicon.glyphicon-info-sign.yo-modal-trigger.wtf(wtf data-modal-id='wtf')

